generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kitchen {
  id          Int        @id @default(autoincrement())
  name        String
  image       String?
  description String
  Category    Category[]
  Orders      Orders[]
  Product     Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  categoryId  Int
  kitchenId   Int
  category    Category @relation(fields: [categoryId], references: [id])
  kitchen     Kitchen  @relation(fields: [kitchenId], references: [id])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  image     String?
  kitchenId Int
  kitchen   Kitchen   @relation(fields: [kitchenId], references: [id])
  products  Product[]
}

model Users {
  id          Int      @id @default(autoincrement())
  name        String
  username    String   @unique
  password    String
  location    String
  phoneNumber String
  orders      Orders[]
}

model Admins {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  username String @unique
}

model Orders {
  id         Int         @id @default(autoincrement())
  items      Json
  totalPrice Float
  date       DateTime    @default(now())
  note       String?
  status     OrderStatus
  kitchenId  Int
  userId     Int
  Kitchen    Kitchen     @relation(fields: [kitchenId], references: [id])
  user       Users       @relation(fields: [userId], references: [id])
}

enum OrderStatus {
  Pending
  Delivered
  Preparing
}
