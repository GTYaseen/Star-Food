datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Kitchen {
  id      Int       @id @default(autoincrement())
  name    String
  image   String?
  Product Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  categoryId  Int
  kitchenId   Int
  category    Category @relation(fields: [categoryId], references: [id])
  kitchen     Kitchen  @relation(fields: [kitchenId], references: [id])
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  image    String?
  products Product[]
}

model Users {
  id          Int      @id @default(autoincrement())
  name        String
  username    String   @unique
  password    String
  location    String
  phoneNumber String
  orders      Orders[]
}

model Admins {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  username String @unique
}

model Orders {
  id         Int         @id @default(autoincrement())
  items      Json
  quantity   Int
  totalPrice Float
  date       DateTime
  status     OrderStatus
  userId     Int
  user       Users       @relation(fields: [userId], references: [id])
}

enum OrderStatus {
  Pending
  Delivered
  Preparing
}
