datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Kitchen {
  id         Int     @id @default(autoincrement())
  name       String
  image      String
  productsId Int
  products   Product @relation(fields: [productsId], references: [id])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  kitchens    Kitchen[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  image    String
  products Product[]
}

model Users {
  id          Int      @id @default(autoincrement())
  name        String
  password    String
  location    String
  phoneNumber Int
  Orders      Orders[]
}

model Admins {
  id       Int    @id @default(autoincrement())
  name     String
  password String
}

model Orders {
  id         Int      @id @default(autoincrement())
  items      Json
  quantity   Int
  totalPrice Float
  date       DateTime
  user       Users    @relation(fields: [userId], references: [id])
  userId     Int
}
